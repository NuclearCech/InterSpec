{
  "name": "InterSpec",
  "version": "1.0.0",
  "description": "Application for spectroscopy",
  "homepage": "https://hekili.ca.sandia.gov/interspec/",
  "main": "main.js",
  "scripts": {
    "prestart": "node copy_resources.js",
    "start": "electron .",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=../macOS/InterSpec.icns --prune=true --out=release-builds --binaries=InterSpec.exe --extendInfo=../macOS/Info.plist --entitlements=../macOS/entitlements.mac.plist --ignore=copy_resources.* --ignore=LICENSE.md --ignore=README.md",
    "package-win": "electron-packager . InterSpec --overwrite --asar=false --platform=win32 --arch=x64 --icon=../../windows/icon.ico --prune=true --out=release-builds --version-string.CompanyName=\"Sandia National Laboratories\" --version-string.FileDescription=\"nuclear spectroscopy analysis program\" --version-string.ProductName=\"InterSpec\" --ignore=copy_resources.* --ignore=LICENSE.md --ignore=README.md",
    "package-linux": "electron-packager . InterSpec --overwrite --asar=0 --platform=linux --arch=x64 --icon=assets/icons/png/1024x1024.png --prune=true --out=release-builds --ignore=copy_resources.* --ignore=LICENSE.md --ignore=README.md"
  },
  "directories": {
    "wt_resources": "file:resources",
    "InterSpec_resources": "file:InterSpec_resources",
    "data": "file:data"
  },
  "files": {
    "exe": "file:InterSpec.exe"
  },
  "keywords": [
    "InterSpec",
    "spectroscopy",
    "N42"
  ],
  "author": {
    "name": "William Johnson",
    "email": "wcjohns@sandia.gov"
  },
  "license": "US Government Use Only",
  "dependencies": {
    "package.json": "^2.0.1",
    "ws": "^3.3.3"
  },
  "devDependencies": {
    "electron": "^1.8.6",
    "electron-packager": "^10.1.2",
    "fs.extra": "^1.3.2"
  }
}
